<?xml version="1.0" encoding="UTF-8"?>
<openerp>
<data>
               
<!-- Setting Base theme favicon and title -->
       
  <template id="layout" inherit_id="web.layout" name="Setting favicon" priority="20">
		
		<xpath expr="//link[@rel='shortcut icon']" position="replace">
				  
			<link rel="shortcut icon" href="/thrivebase/static/src/img/favicon.png" type="image/x-icon"/>
				   
		</xpath>
				
  </template>
				
<!-- Setting Base theme title -->
		
  <template id="custom_title" name="change title" inherit_id="web.layout">
  
	   <xpath expr="//title" position="replace">
	   
				        <title>Thrive</title>
				        
	   </xpath>
	   
  </template>
        
<!-- Add theme base CSS and Javascript -->

  <template id="assets_backend" inherit_id="web.assets_backend" name="Base Custom CSS and JS" priority="20">
	  <xpath expr="." position="inside">
			        <link rel="stylesheet" href="/thrivebase/static/src/css/backend.css"/>
			        <script type="text/javascript" src="/thrivebase/static/src/js/backend.js"></script>
	  </xpath>
 </template>
	
			
<!-- Remove login footer and change logo -->
<!-- Priority 10 to be applied before website.login_layout if installed -->
	
		<template id="login_layout" inherit_id="web.login_layout"
		          name="Login Layout" priority="10">
		    <xpath expr="//div[@t-if='not disable_footer']" position="replace">
		    <div class="text-center">
		        <a href="https://www.thrivecloud.com.ng" target="_blank">Powered by <span>Thrive</span></a>
		    </div>
		    </xpath>
		    
		    <xpath expr="//div[@class='text-center']" position="replace">
		        <div class="oe_single_form_logo text-center">
		            <img src="/thrivebase/static/src/img/logo.png"
		                 alt="Thrive ERP"
		                 title="Thrive ERP" />
		        </div>
		    </xpath>
		</template>
		
<!-- Setting Base Theme sidebar logo and Footer -->
	
	<template id="menu_secondary" inherit_id="web.menu_secondary" name="Force backend Logo" priority="10">
		    
		    <xpath expr="//a[@class='oe_logo']" position="replace">
		    
		    <a class="side-logo" t-att-href="'/web/?debug' if debug else '/web'">
                <span class="oe_logo_edit">Edit Company data</span>
                <img src="/thrivebase/static/src/img/logo.png" alt="Thrive ERP" title="Thrive ERP" />
            </a>

		        
		    </xpath>
		    <xpath expr="//div[@class='oe_footer']" position="replace">
		        <div class="footer-sign">Powered by <a href="http://www.thrivecloud.com.ng" target="_blank"><span>Thrive</span></a></div>
		    </xpath>
 	</template>
 
 
		
 
    </data>
</openerp>