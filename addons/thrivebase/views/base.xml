<?xml version="1.0" encoding="UTF-8"?>

 	
<templates id="template" xml:space="preserve">

<!-- Base User Menu Adjustment -->
<t t-extend="UserMenu">
    <t t-jquery="ul.dropdown-menu" t-operation="replace">
           <ul class="dropdown-menu">
                <li><a href="#" data-menu="settings">Preferences</a></li>
                <li><a href="#" data-menu="logout">Log out</a></li>
            </ul>
    </t>
</t>
    
<!-- Base User Menu Adjustment for Help and Support -->  
<t t-extend="PlannerLauncher">
    <t t-jquery="li.o_planner_help" t-operation="replace">
           <li class="o_planner_help">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#" title="Open Help Menu" aria-expanded="false">
                <span class="fa fa-question-circle"/>
                <b class="caret"/>
            </a>
            <ul class="dropdown-menu" role="menu">
                <li class="o_planner_link"><a href="#" data-menu="planner">Planner</a></li>
                <li><a href="#" data-menu="documentation">Documentation</a></li>
                 <li><a href="#" data-menu="about">About</a></li>
            </ul>
        </li>
    </t>
</t>

<!-- About Thrive (Modal Pop up) -->

<t t-extend="PlannerLauncher.about">
   <t t-jquery="div.oe_about" t-operation="replace">
        <div class="oe_about">

            <div class="container-fluid">
                <div class="row">
                    <a class="oe_activate_debug_mode oe_right label label-primary" href="?debug" >Activate the developer mode</a>
                </div>
                <div class="row">
                    <div class="col-sm-offset-2 col-md-offset-2 col-sm-8 col-md-8 user-details">
                        <div class="user-image">
                            <img src="/thrivebase/static/src/img/logo.png" alt="Thrive ERP" title="Thrive ERP" class=""/>
                        </div>
                        <div class="user-info-block">
                            <div class="user-heading">
                                <h3>Version <t t-esc="version_info.server_version"/></h3>
                            </div>
                            <div class="user-body">
                                <div class="tab-content">
                                    <div id="settings" class="tab-pane active">
                                        <h4>Copyright Â© 2015 Minyx360</h4>
                                        <p>Thrive is a trademark of <a target="_blank" href="https://www.minyx360.com" style="text-decoration: underline;">Minyx360</a></p>
                                        <p>Thrive was created from the  Base of  Odoo Opensource ERP Framework and Licensed under the terms of <a target="_blank" href="http://www.gnu.org/licenses/lgpl.html" style="text-decoration: underline;">GNU Lesser General Public License</a></p>
                                        <p>For more information visit <a target="_blank" href="https://www.thrivecloud.com.ng" style="text-decoration: underline;">Thrivecloud.com.ng</a></p>
                                        <p>
                                          <a href="https://www.facebook.com/thrivecloud"><i class="fa fa-facebook-square fa-3x social-fb"></i></a>
                                          <a href="https://www.twitter.com/thrivecloud"><i class="fa fa-twitter-square fa-3x social-tw"></i></a>
                                          <a href="https://www.plus.google.com/thriveclloud"><i class="fa fa-google-plus-square fa-3x social-gp"></i></a>
                                          <a href="https://www.linkedin.com/thrivecloud"><i class="fa fa-linkedin-square fa-3x social-lk"></i></a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
  </t>

<!-- Settings Dashboard -->

<t t-extend="DashboardMain">
 <t t-jquery="div.o_web_settings_dashboard" t-operation="replace">
        <div class="container-fluid o_web_settings_dashboard">
            <div class="row">
                <div class="col-md-3 col-sm-6 col-xs-12 o_web_settings_dashboard_col"> <div class="text-center o_web_settings_dashboard_apps"></div>
                    <ul class="nav nav-pills o_web_settings_dashboard_pills">
                        
                    </ul>
                </div>
                <div class="col-md-3 col-sm-6 col-xs-12 o_web_settings_dashboard_col"> 
                    <div class="text-center o_web_settings_dashboard_invitations"></div>
                </div>
                <div class="col-md-3 col-sm-6 col-xs-12 o_web_settings_dashboard_col">
                    <div class="text-center o_web_settings_dashboard_planner"></div>
                </div>
                <div class="col-md-3 col-sm-6 col-xs-12 o_web_settings_dashboard_col">
                    <div class="text-center o_web_settings_dashboard_share"></div>
                </div>
            </div>
        </div>
    </t>
  </t>

<t t-extend="DashboardPlanner">
    <t t-jquery="div.o_web_settings_dashboard_planner" t-operation="replace">
        <div class="text-center o_web_settings_dashboard_planner">
            <i class="fa fa-info-circle fa-4x text-muted"></i>
            <div class="o_web_settings_dashboard_header">
                <span class="o_web_settings_dashboard_planner_overall_progress"><t t-esc="widget.overall_progress"></t></span>%
                Implementation
            </div>
            <div>
                <small class="text-muted text-center o_web_settings_dashboard_compact_subtitle">
                    Follow these implementation guides to get the most out of Thrive.
                </small>
            </div>
            <hr/>
            <t t-set="planners" t-value="widget.planners"/>
            <t t-call="DashboardPlanner.PlannersList"/>
            <hr/>
            
        </div>
    </t>
  </t>
  
  <t t-extend="DashboardShare">
     <t t-jquery="div.o_web_settings_dashboard_share" t-operation="replace">
        <div class="text-center o_web_settings_dashboard_share">
            <i class="fa fa-share-alt fa-4x text-muted"/>
            <div class="o_web_settings_dashboard_header">Help Other Business Thrive</div>
            <div>
                <small class="text-muted text-center o_web_settings_dashboard_compact_subtitle">
                    Help us spread the word: Share Thrive's awesomeness with your friends!
                </small>
            </div>
            <hr/>
            <div class="row mt16">
                <div class="col-xs-4"><a><i class="fa fa-twitter-square fa-4x tw_share"/></a></div>
                <div class="col-xs-4"><a><i class="fa fa-facebook-square fa-4x fb_share"/></a></div>
                <div class="col-xs-4"><a><i class="fa fa-linkedin-square fa-4x li_share"/></a></div>
            </div>
        </div>
    </t>
  </t>
  
<!-- Adjusting The POS View (for later Use) -->

<t t-extend="Chrome">
    <t t-jquery="div.pos-branding" t-operation="replace">
           <div class="pos-branding">
                    <img class="pos-logo" src="/thrivebase/static/src/img/logo-pos.png" />
                    <span class="placeholder-UsernameWidget"></span>
           </div>
    </t>
</t>
  
</templates>
